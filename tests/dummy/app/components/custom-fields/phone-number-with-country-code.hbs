{{! BEGIN-SNIPPET custom-field-component.hbs }}
<div class="input-group padding-0">
  <PowerSelect
    @triggerClass="input-group-text pe-5 border border-0"
    @options={{this.countryCodes}}
    @selected={{this.selectedCountryCode}}
    @allowClear={{false}}
    @searchEnabled={{false}}
    @placeholder="Country code"
    @onChange={{fn this.codeSelected @formField}}
    @disabled={{@formField.disabled}}
    as |option|
  >
    {{option.code}}
    -
    {{option.name}}
  </PowerSelect>
  <input
    class="form-control border border-0 border-start"
    {{on "focusout" this.inputFocusOut}}
    {{on "focusin" this.inputFocusIn}}
    {{on "keyup" this.inputKeyUp}}
    {{on "change" this.inputChange}}
    value={{readonly this.displayObject.phoneNumber}}
    type="text"
    readonly={{@formField.readonly}}
    disabled={{@formField.disabled}}
    name={{concat @formField.name "-phone-number-input"}}
    ariaLabelledBy={{@ariaLabelledBy}}
    aria-label={{@ariaLabel}}
    aria-errormessage="{{@formField.id}}-errors"
    aria-describedby="{{@formField.id-description}}"
    required
  />
</div>
{{! END-SNIPPET }}