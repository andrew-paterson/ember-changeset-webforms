<textarea
  class="validation-area
    {{ember-changeset-webforms/dynamic-class-names
      'textareaElement'
      @changesetWebform
      @formField
      @formField.validationStatus
    }}"
  value={{@formField.fieldValue}}
  {{on "keyup" (fn this.onUserInteraction @formField "keyUp")}}
  {{on "keyup" (fn this.onUserInteraction @formField "keyDown")}}
  {{on "blur" (fn this.onUserInteraction @formField "focusOut")}}
  {{on "focus" (fn this.onUserInteraction @formField "focusIn")}}
  {{on "change" (fn this.onChange @formField)}}
  placeholder={{@formField.placeholder}}
  autofocus={{@formField.autofocus}}
  readonly={{@formField.readonly}}
  disabled={{@formField.disabled}}
  name={{@formField.name}}
  id={{@formField.id}}
  ariaLabelledBy={{@ariaLabelledBy}}
  aria-label={{@ariaLabel}}
  aria-errormessage="{{@formField.id}}-errors"
  aria-describedby="{{@formField.id-description}}"
/>