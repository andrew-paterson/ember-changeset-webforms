<textarea
  class="validation-area
    {{ember-changeset-webforms/dynamic-class-names
      'textareaElement'
      @changesetWebform
      @formField
      @formField.validationStatus
    }}"
  value={{@displayValue}}
  {{on "keyup" (fn this.onUserInteractionAction @formField "keyUp")}}
  {{on "keyup" (fn this.onUserInteractionAction @formField "keyDown")}}
  {{on "blur" (fn this.onUserInteractionAction @formField "focusOut")}}
  {{on "focus" (fn this.onUserInteractionAction @formField "focusIn")}}
  {{on "change" (fn this.onChangeAction @formField)}}
  placeholder={{@formField.placeholder}}
  autofocus={{@formField.autofocus}}
  readonly={{@formField.readonly}}
  disabled={{@formField.disabled}}
  name={{@formField.name}}
  id={{@formField.id}}
  ariaLabelledBy={{@ariaLabelledBy}}
  aria-label={{@ariaLabel}}
/>