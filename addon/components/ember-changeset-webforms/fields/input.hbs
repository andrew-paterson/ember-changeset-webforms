<input
  class="{{ember-changeset-webforms/dynamic-class-names
      'inputElement'
      @changesetWebform
      @formField
      @formField.validationStatus
    }}"
  value={{@formField.fieldValue}}
  {{on "keyup" (fn this.onUserInteraction "keyUp")}}
  {{on "keydown" (fn this.onUserInteraction "keyDown")}}
  {{on "blur" (fn this.onUserInteraction "focusOut")}}
  {{on "focus" (fn this.onUserInteraction "focusIn")}}
  {{on "change" this.onChange}}
  placeholder={{@formField.placeholder}}
  autofocus={{@formField.autofocus}}
  type={{@formField.inputType}}
  readonly={{@formField.readonly}}
  disabled={{@formField.disabled}}
  name={{@formField.name}}
  id={{@formField.id}}
  ariaLabelledBy={{@ariaLabelledBy}}
  aria-label={{@ariaLabel}}
  aria-errormessage="{{@formField.id}}-errors"
  aria-describedby={{if
    @formField.description
    (concat @formField.id "-description")
  }}
/>