<EmberChangesetWebforms::FieldElements::FieldLabel 
  @formField={{masterFormField}} />
<EmberChangesetWebforms::FieldElements::FieldErrors 
  @changesetProp={{changesetProp}} 
  @formField={{masterFormField}} 
  @validationStatus={{validationStatus}}
  @validationErrorsArray={{masterFormFieldValidationErrors}}
  @class="clone-group-field-errors" />
<div class="clone-group-items">
  {{#each masterFormField.clonedFields as |clonedFormField| }}
    <EmberChangesetWebforms::ClonedFieldElements::ValidatingClone 
      @cloneField={{action "cloneField"}} 
      @onUserInteractionClone={{action onUserInteractionClone}}
      @setFieldValue={{action setFieldValue}} 
      @validateField={{action validateField}} 
      @removeClone={{action "removeClone"}}
      @updatedGroupValue={{updatedGroupValue}} 
      @changesetProp={{changesetProp}} 
      @groupValue={{groupValue}} 
      @clonedFormField={{clonedFormField}} 
      @masterFormField={{masterFormField}} 
      @changesetWebform={{changesetWebform}}
      data-test-id={{concat masterFormField.fieldId "-clone-" clonedFormField.cloneId "-wrapper"}} />
  {{/each}}
</div>
<div class="clone-group-actions">
  {{#if (eq masterFormField.cloneCountStatus "max")}}
    <div class="max-clones-reached" data-test-id="max-clones-reached">{{masterFormField.maxClonesReachedText}}</div>
  {{else}}
    {{component masterFormField.addCloneButtonComponent cloneField=(action "cloneField") masterFormField=masterFormField cloneFieldLabel=masterFormField.clonedFields.firstObject.fieldLabel changesetWebform=changesetWebform}}
  {{/if}}
</div>