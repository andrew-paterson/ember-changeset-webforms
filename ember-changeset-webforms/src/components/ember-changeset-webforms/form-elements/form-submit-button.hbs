<button
  type={{this.customType}}
  data-test-id={{this.data-test-id}}
  disabled={{this.disabled}}
  ...attributes
>
  {{@formSettings.submitButtonText}}
  {{#if @changesetWebform.formSettings.requestInFlight}}
    {{#if @formSettings.submitButtonIconComponent}}
      <@formSettings.submitButtonIconComponent.componentClass
        @props={{@formSettings.submitButtonIconComponent}}
        @changesetWebform={{@changesetWebform}}
        class={{ember-changeset-webforms/dynamic-class-names
          "buttonIcon,submitButtonIconComponent"
          @changesetWebform
        }}
      />
    {{else}}
      <div></div>
    {{/if}}
  {{/if}}
</button>