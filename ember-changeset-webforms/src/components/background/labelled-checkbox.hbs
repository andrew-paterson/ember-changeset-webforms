<div
  class="{{ember-changeset-webforms/dynamic-class-names
      'labelledCheckbox'
      @changesetWebform
      @formField
      @formField.validationStatus
    }}
    {{if @disabled 'disabled'}}"
  data-test-id={{this.checkboxId}}
  data-test-option="checkbox-option-{{@option.key}}"
  data-test-labelled-checkbox
>
  <input
    type="checkbox"
    checked={{readonly @value}}
    {{on "click" this.checkboxClicked}}
    disabled={{@disabled}}
    id={{this.checkboxId}}
    aria-labelledby={{this.labelId}}
    name={{@name}}
    class="{{ember-changeset-webforms/dynamic-class-names
        'checkboxElement'
        @changesetWebform
        @formField
        @formField.validationStatus
      }}"
  />
  <Background::OptionLabelComponent
    @optionLabelComponent={{@optionLabelComponent}}
    @option={{@option}}
    @optionMarkdownLabel={{@optionMarkdownLabel}}
    @label={{@label}}
    @for={{this.checkboxId}}
    @labelId={{this.labelId}}
    @checked={{@value}}
    @changesetWebform={{@changesetWebform}}
    @formField={{@formField}}
    class={{ember-changeset-webforms/dynamic-class-names
      "checkboxLabel"
      @changesetWebform
      @formField
      @formField.validationStatus
    }}
  />
</div>